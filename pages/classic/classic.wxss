/* pages/classic/classic.wxss */
.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.line{
  height: 5px;
  width: 100%;
  background-color: #999999;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: stretch;
}
.items{
  width: 33.333%;
  /* height: 5px; */
}
.color1{
  background-color: #DD5246;
}
.color2{
  background-color: #FFCD42;
}
.color3{
  background-color: #1CA261;
}

.header{
  display: flex;
  width: 100%;
  height: 90rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f5f5f5;
  border-top: 1px solid #f5f5f5;
  padding: 0 3% 0 3%;
  box-sizing: border-box;
}
.navi{
  width: 600rpx;
  position: absolute;
  bottom: 40rpx;
}